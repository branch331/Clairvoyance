<Window x:Class="Clairvoyance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clairvoyance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="325*"/>
        </Grid.RowDefinitions>

        <CheckBox Content="Work Week?" FontSize="16" IsChecked="{Binding IsWorkWeek}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,56,0,0" Height="24" Width="109"/>

        <TextBlock HorizontalAlignment="Left" Height="24" Margin="615,37,0,0" TextWrapping="Wrap" Text="New Task Entry:" VerticalAlignment="Top" Width="85"/>

        <TextBlock HorizontalAlignment="Left" Height="24" Margin="552,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" RenderTransformOrigin="0.822,-1.146"><Run Text="Name"/><LineBreak/><Run/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="610,61,0,0" TextWrapping="Wrap" Text="{Binding TaskItemName}"  VerticalAlignment="Top" Width="173" RenderTransformOrigin="0.119,-1.688"/>

        <TextBlock HorizontalAlignment="Left" Height="24" Margin="544,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Text="Category" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="610,90,0,0" TextWrapping="Wrap" Text="{Binding TaskItemCategory}" VerticalAlignment="Top" Width="173" Grid.RowSpan="2"/>

        <TextBlock HorizontalAlignment="Left" Height="24" Margin="544,24.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Grid.Row="1"><Run Text="Description"/><LineBreak/><Run/></TextBlock>
        <RichTextBox HorizontalAlignment="Left" Height="38" Margin="610,23.5,0,0" VerticalAlignment="Top" Width="173" Grid.Row="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding TaskItemDescription}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <TextBlock HorizontalAlignment="Left" Height="24" Margin="549,66.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Grid.Row="1"><Run Text="Times"/><LineBreak/><Run/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding TaskItemStartTime}" VerticalAlignment="Top" Width="90" Margin="610,66.5,0,0" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="705,66.5,0,0" TextWrapping="Wrap" Text="{Binding TaskItemEndTime}" VerticalAlignment="Top" Width="78" Grid.Row="1">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding CreateNewTaskItem}" Key="Return" />
                <KeyBinding Command="{Binding CreateNewTaskItem}" Key="Enter" />
            </TextBox.InputBindings>
        </TextBox>

        <Button Content="Submit" HorizontalAlignment="Left" Height="22" Margin="674,111.5,0,0" VerticalAlignment="Top" Width="54" Click="Submit_Task_Click" Grid.Row="1"/>

    </Grid>
</Window>
